pipeline{
    agent any
    tools{nodejs 'node'}
    stages{
        stage('software installations and git cloning'){
        steps{ git 'https://github.com/anishadaniels/gallery.git'
        sh 'npm install'
        sh 'npm install --save express'
        sh 'npm install -- global yarn'
         
        }
        }
       
    
        stage('Build'){
            steps{
                echo'build succesful'
            }
        }
        stage('Tests'){
            steps {
                sh 'npm test'}
        }
    }
}
